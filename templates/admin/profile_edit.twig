{# Page: NavSecondary > Extensions > Members #}

{% extends "@bolt/_base/_page-nav.twig" %}

{% block page_nav 'Extensions' %}

{% block page_title %}
    {{ __('Members') }}
{% endblock page_title %}

{% block page_subtitle %}
    {{ __('Editing Membership Profile') }}: {{ form_profile_edit.vars.value.displayname|default('New User') }}
{% endblock page_subtitle %}

{# clear default messages, because we use them in a different spot, in this template #}
{% block messages "" %}

{% block page_main %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <div class="row">
        <h4>{{ __('Edit Existing Profile') }}</h4>
    </div>

    <div class="row profile">

        <div class="col-md-9">
            {% block profile %}
                {{ form_start(form_profile_edit, {'attr': {'id': 'profile', 'class': 'row'}, 'action': null}) }}

                {% for name, row in form_profile_edit if name not in ['submit', 'password', '_token'] %}
                    <br>
                    {{ form_label(row, null, {'label_attr': {'class': 'main col-xs-12'}}) }}
                    {{ form_errors(row) }}
                    {{ form_widget(row, { 'attr': {'class': 'form-control large'} }) }}
                {% endfor %}
                <br>
                {{ form_label(form_profile_edit.password.first, null, {'label_attr': {'class': 'main col-xs-12'}}) }}
                {{ form_errors(form_profile_edit.password.first) }}
                {{ form_widget(form_profile_edit.password.first, { 'attr': {'class': 'form-control large'} }) }}
                <br>
                {{ form_label(form_profile_edit.password.second, null, {'label_attr': {'class': 'main col-xs-12'}}) }}
                {{ form_errors(form_profile_edit.password.second) }}
                {{ form_widget(form_profile_edit.password.second, { 'attr': {'class': 'form-control large'} }) }}

                <div class="hidden">
                    {{ form_row(form_profile_edit.submit, {'attr': {'class': 'button btn btn-default'}}) }}
                    {{ form_row(form_profile_edit._token) }}
                </div>
                {{ form_end(form_profile_edit) }}
            {% endblock profile %}
        </div>

        <aside class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-cog fa-fw"></i> {{ __('Actions') }}
                </div>

                <div class="panel-body">
                    {% include '@MembersAdmin/_aside-save.twig' %}
                </div>

            </div>

            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-cog fa-fw"></i>{{ __('Linked Social Media Accounts') }}</div>

                <div class="panel-body">
                    {% for provider in member_providers(guid) %}
                        {% set providericon = provider %}
                        {% if provider == 'local' %}{% set providericon = 'user' %}{% endif %}
                        <a href="#" type="button" class="btn btn-default btn-block btn-sm">
                            <i class="fa fa-{{ providericon }}"></i>
                            {{ provider|title }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </aside>

    </div>
{% endblock page_main %}
